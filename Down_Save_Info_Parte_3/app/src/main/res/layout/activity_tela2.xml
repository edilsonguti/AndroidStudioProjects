<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".Tela2">

    <TextView
        android:id="@+id/mensagemRecebidaXML"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#DA8A14"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/savarButton"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="SALVAR MENSAGEM" />

    <Button
        android:id="@+id/apagarButton"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="APAGAR MENSAGEM" />

    <Button
        android:id="@+id/visualizarButton"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="VISUALIZAR MENSAGEM" />
</LinearLayout>